@model Disaster_Alleviation_Web.Models.GoodsPurchase

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Purchase Goods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisasterId" class="control-label"></label>
                <select asp-for="DisasterId" class="form-control" asp-items="ViewBag.DisasterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MonetaryId" class="control-label"></label>
                <select asp-for="MonetaryId" class="form-control" asp-items="ViewBag.MonetaryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="purchaseAmount" class="control-label"></label>
                <input asp-for="purchaseAmount" class="form-control" />
                <span asp-validation-for="purchaseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
